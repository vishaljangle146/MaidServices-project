<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="./logo.png" type="image/png">
  <title>Update Profile</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
    }
    
    .container {
      max-width: 500px;
      margin: 50px auto;
      padding: 20px;
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
  
    h1 {
      text-align: center;
      color: #333;
    }
  
    label {
      display: block;
      margin-bottom: 5px;
      color: #555;
    }
  
    input[type="text"],
    select {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
    }
  
    button[type="submit"] {
      width: 100%;
      padding: 10px;
      background-color: #007bff;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
    }
  
    button[type="submit"]:hover {
      background-color: #0056b3;
    }
  </style>

<link href="./style.css" rel="stylesheet">
</head>
<body>
  <div class="container">
    <h1>Update Profile</h1>
    <form id="updateProfileForm" action="/updateprofile" method="POST">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required>

      
        <label for="service">Choose a Service:</label>
        <select id="service" name="service" >
            <option value="">Select</option>
            <option value="Cleaning">Cleaning</option>
            <option value="Cooking">Cooking</option>
            <option value="Babysitting">Babysitting</option>
            <option value="Garden care tacker">Garden care tacker</option>
        </select>
    

        
          <label for="city">Select a Area:</label>
          <select id="city" name="city" >
              <option value="">Select</option>
              <option value="Ajab Nagar">Ajab Nagar</option>
              <option value="Aurangabad City - 431001">Aurangabad City - 431001</option>
              <option value="Shivaji Nagar - 431002">Shivaji Nagar - 431002</option>
              <option value="Cidco - 431003">Cidco - 431003</option>
              <option value="Garkheda - 431005">Garkheda - 431005</option>
              <option value="Garkheda Parisar - 431005">Garkheda Parisar - 431005</option> 
              <option value="Jyotinagar - 431005">Jyotinagar - 431005</option>
              <option value="Samarthnagar - 431005">Samarthnagar - 431005</option>
              <option value="Chikalthana - 431007">Chikalthana - 431007</option>  
              <option value="Mukundwadi - 431010">Mukundwadi - 431010</option>
              <option value="Satara Parisar - 431002">Satara Parisar - 431002</option>
              <option value="Padampura - 431002">Padampura - 431002</option>  
              <option value="Ghati - 431002">Ghati - 431002</option>
              <option value="Kranti Chowk - 431001">Kranti Chowk - 431001</option>
              <option value="CIDCO N-11 - 431003">CIDCO N-11 - 431003</option>  
              <option value="CIDCO N-9 - 431003">CIDCO N-9 - 431003</option>
              <option value="Osmanpura - 431005">Osmanpura - 431005</option>
              <option value="Mahavir Chowk - 431005">Mahavir Chowk - 431005</option>
              <option value="Cidco - 431003">Cidco - 431003</option>  
              <option value="New Shreya Nagar - 431001">New Shreya Nagar - 431001</option>
              <option value="Pundalik Nagar - 431002">Pundalik Nagar - 431002</option>
          </select>
      


      <label for="phone">Phone:</label>
      <input type="text" id="phone" name="phone" pattern="[0-9]{10}" maxlength="10" required>

      
       
    

      <!-- Add more input fields for other profile data -->

      <button type="submit">Update Profile</button>
    </form>
  </div>




  <div id="translate-popup" class="translate-popup">
    <div id="google_translate_element"></div>
  </div>
  <script type="text/javascript">
    function googleTranslateElementInit() {
      new google.translate.TranslateElement({ pageLanguage: 'en' }, 'google_translate_element');
    }
  </script>


  <script type="text/javascript">
    function googleTranslateElementInit() {
      new google.translate.TranslateElement({
        pageLanguage: 'en',
        includedLanguages: 'en,hi,mr', // English, Hindi, Marathi
      }, 'google_translate_element');
    }

    document.getElementById('translate-btn').addEventListener('click', function() {
      var popup = document.getElementById('translate-popup');
      popup.classList.toggle('show');
    });
  </script>
  <script type="text/javascript" src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
  <script>
    window.addEventListener('load', function() {
    var popup = document.getElementById('translate-popup');
    if (popup) {
      popup.style.display = 'block';
    }
  });
  </script>

<!-- Template Javascript -->
<script src="./main.js"></script>


</body>
</html>
